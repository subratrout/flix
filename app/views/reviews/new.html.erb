<h2> New Review for <%= link_to(@movie.title, @movie) %></h2>

<%= form_for([@movie, @review]) do |f| %>
	<%= render "shared/errors", object: @review %>
	<fieldset>

		<ol>
				
			<li class='required'>
				<%= f.label :name %> </br>
				<%= f.text_field :name, size:40, autofocus: true %>
			</li>

			<li class="required stars">
				<%= f.label :stars %>
				<%= f.select :stars, Review::STARS, prompt: "Pick one" %>
			</li>

			<li class='required'>
				<%= f.label :comment %> </br>
				<%= f.text_area :comment, cols:40, placeholder: "What do you think?" %>
			</li>
		</ol>

		<p>
			<%= f.submit 'Post Review' %>
			<%= link_to "Cancel", @movie, class: 'button' %>
		</p>
			
	</fieldset>

<%end%>