
<ul id="movies">

<% @movies.each do |movie| %>
  <li>
          <article class="movie">
            <header>
              <%= image_for(movie)%>
              <h2><%= link_to movie.title, movie %>(<%= movie.released_on.year %>)</h2>
              <h3><%= movie.cast %>
            </header>
            <p>
              <%= truncate(movie.description, length:40, :separator=>' ') %>
            </p>
            <table>
              <tr>
                <th>Released:</th>
                <td><%= movie.released_on %></td>
                (<%= time_ago_in_words(movie.released_on) %> ago)
              </tr>
              <tr>
                <th>Rating:</th>
                <td><%= movie.rating %></td>
              </tr>
              <tr>
                <th>Duration:</th>
                <td><%= movie.duration %></td>
              </tr>
              <tr>
                <th>Total Gross:</th>
                <td><%= format_total_gross(movie) %></td>
              </tr>
            </table>
          </article>

          <%= link_to "Add new Movies" , new_movie_path%>
          <%= link_to "Write a Review", new_movie_review_path(movie)%>
          <%= link_to "Reviews", movie_reviews_path(movie) %>

        <% end %>
        
  </li>
</ul>

